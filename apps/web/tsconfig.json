{
  "extends": "@gingga/tsconfig/react.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["vite/client"],
    "allowJs": true,
    "noEmit": true,
    "outDir": "dist"
  },
  "references": [
    {
      "path": "../api"
    }
  ],
  "include": [
    "src/**/*",
    "src/**/.server/**/*",
    "src/**/.client/**/*",
    "drizzle.config.ts",
    "app.config.ts"
  ],
  "exclude": ["node_modules", "dist", ".vinxi", ".vercel"]
}
